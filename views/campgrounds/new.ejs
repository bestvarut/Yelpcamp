<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campgrounds</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title (require)</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                    <div class="valid-feedback">Valid</div>
                    <div class="invalid-feedback">Require</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location (require)</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                    <div class="valid-feedback">Valid</div>
                    <div class="invalid-feedback">Require</div>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Default file input example</label>
                    <input class="form-control" type="file" id="formFile" multiple name="image">
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url (require)</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" required>
                    <div class="valid-feedback">Valid</div>
                    <div class="invalid-feedback">Require</div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price (require)</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price">$</span>
                        <input id="price" type="text" class="form-control" placeholder="0.00" name="campground[price]"
                            required>
                        <div class="valid-feedback">Valid</div>
                        <div class="invalid-feedback">Require</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" name="campground[description]" id="description" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>

            </form>
            <footer><a href="/campgrounds">Cancel</a></footer>
        </div>
    </div>
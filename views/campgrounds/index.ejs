<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add Campgrounds</a>
    </div>

    <% campgrounds.forEach(camp=> { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (camp.image.length) { %>
                        <img src="<%= camp.image[0].url %>" class="img-fluid" alt="">
                        <% }else {%>
                            <img src="https://res.cloudinary.com/dlyapubti/image/upload/v1613334891/YelpCamp/noimage-420x273_awik0f.jpg" class="img-fluid" alt="">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <p class="card-text">
                            <small>Campground Price :
                                <%= camp.price %>$
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= camp._id %> ">View <%= camp.title %> </a>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
            <label for="tilocationtle">Location </label>
            <input value="<%= campground.location %>" type="text" name="campground[location]" id="location">
        </div>
        <button>Update Campground</button>
    </form>
</body>
<footer><a href="/campgrounds/<%= campground._id %>">Back to Campground</a></footer>

